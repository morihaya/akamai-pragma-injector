{
  "name": "akamai-pragma-injector",
  "version": "1.0.0",
  "description": "Easily inject Akamai Pragma debug headers into your requests",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js --ignore-pattern 'node_modules/*'",
    "zip": "zip -r akamai-pragma-injector.zip manifest.json background.js popup.html popup.js icons/ -x '*.DS_Store'"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFiles": [
      "./tests/setup.js"
    ],
    "collectCoverageFrom": [
      "background.js",
      "popup.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "keywords": [
    "akamai",
    "cdn",
    "debug",
    "pragma",
    "chrome-extension",
    "edge-extension"
  ],
  "author": "",
  "license": "MIT"
}
